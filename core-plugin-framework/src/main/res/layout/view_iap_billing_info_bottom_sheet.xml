<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_gradient_radial"
    android:padding="@dimen/dimen_40_dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <ImageView
        android:id="@+id/ivFeatureIcon"
        android:layout_width="@dimen/dimen_72_dp"
        android:layout_height="@dimen/dimen_72_dp"
        android:background="@drawable/shape_circle_black"
        android:padding="@dimen/dimen_16_dp"
        android:src="@drawable/ic_theme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFeatureTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10_dp"
        android:text="Themes"
        android:textColor="#363636"
        android:textSize="@dimen/dimen_16_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivFeatureIcon" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_40_dp"
        android:gravity="center"
        android:text=""
        android:textColor="#363636"
        android:textSize="@dimen/dimen_13_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFeatureTitle" />


    <TextView
        android:id="@+id/tvGotItLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_48_dp"
        android:text="Got It"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_16_dp"
        android:padding="@dimen/dimen_6_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDescription"
        android:clickable="true"
        android:background="?attr/selectableItemBackgroundBorderless"

        />

</androidx.constraintlayout.widget.ConstraintLayout>










