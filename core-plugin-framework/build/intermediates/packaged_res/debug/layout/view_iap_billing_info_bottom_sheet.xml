<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_gradient_radial"
        android:padding="@dimen/dimen_40_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/ivFeatureIcon"
            android:layout_width="@dimen/dimen_72_dp"
            android:layout_height="@dimen/dimen_72_dp"
            android:background="@drawable/shape_circle_black"
            android:padding="@dimen/dimen_16_dp"
            android:src="@drawable/ic_theme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvFeatureTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10_dp"
            android:text="Themes"
            android:textStyle="bold"
            android:textColor="#363636"
            android:textSize="@dimen/dimen_16_dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivFeatureIcon" />


        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_40_dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFeatureTitle">

            <View
                android:id="@+id/viewDot1"
                android:layout_width="@dimen/dimen_8_dp"
                android:layout_height="@dimen/dimen_8_dp"
                android:background="@drawable/shape_circle_deep_black" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16_dp"
                android:text=""
                android:textColor="#363636"
                android:layout_marginTop="-4dp"
                android:textSize="@dimen/dimen_13_sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/dimen_16_dp"
            app:layout_constraintTop_toBottomOf="@+id/ll1">

            <View
                android:id="@+id/viewDot2"
                android:layout_width="@dimen/dimen_8_dp"
                android:layout_height="@dimen/dimen_8_dp"
                android:background="@drawable/shape_circle_deep_black" />

            <TextView
                android:id="@+id/tvDetailDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#363636"
                android:textSize="@dimen/dimen_13_sp"
                android:layout_marginStart="@dimen/dimen_16_dp"
                android:layout_marginTop="-4dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/dimen_16_dp"
            app:layout_constraintTop_toBottomOf="@+id/ll2">

            <View
                android:id="@+id/viewDot3"
                android:layout_width="@dimen/dimen_8_dp"
                android:layout_height="@dimen/dimen_8_dp"
                android:background="@drawable/shape_circle_deep_black" />

            <TextView
                android:id="@+id/tvInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginStart="@dimen/dimen_16_dp"
                android:textColor="#363636"
                android:textSize="@dimen/dimen_13_sp"
                android:layout_marginTop="-4dp"
                />


        </LinearLayout>

        <TextView
            android:id="@+id/tvGotItLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_48_dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:padding="@dimen/dimen_6_dp"
            android:text="Got It"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_16_dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll3"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>









