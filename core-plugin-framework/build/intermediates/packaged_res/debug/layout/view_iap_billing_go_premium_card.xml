<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_16_dp"
    android:elevation="@dimen/dimen_4_dp"
    app:cardCornerRadius="@dimen/dimen_16_dp"
    android:id="@+id/cvGoPremium"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#282461"
        android:paddingVertical="@dimen/dimen_16_dp"
        android:paddingLeft="@dimen/dimen_20_dp"
        android:paddingRight="@dimen/dimen_6_dp">


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/crown"
            android:layout_width="@dimen/dimen_100_dp"
            android:layout_height="@dimen/dimen_100_dp"
            android:background="@null"
            android:elevation="@dimen/dimen_8_dp"
            android:scaleType="centerCrop"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_marginTop="@dimen/dimen_4_dp"
            app:lottie_rawRes="@raw/iap_billing_purchase_complete_crown"

            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@+id/crown"
            app:layout_constraintTop_toTopOf="@+id/crown"
            android:layout_marginHorizontal="@dimen/dimen_40_dp"
            android:layout_marginTop="@dimen/dimen_4_dp"
            >
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/premium_text"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_12_dp"
               />


            <TextView
                android:id="@+id/btnGoPremium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_18_dp"
                android:background="@drawable/shape_rounded_corner_white"
                android:gravity="center"
                android:paddingHorizontal="@dimen/dimen_12_dp"
                android:paddingVertical="@dimen/dimen_6_dp"
                android:text="Go Premium"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_16_sp"
                 />

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>









