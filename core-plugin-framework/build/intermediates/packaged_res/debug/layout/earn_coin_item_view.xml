<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen_16_dp"
    android:layout_marginEnd="@dimen/dimen_16_dp"
    android:layout_marginTop="@dimen/dimen_20_dp"
    android:layout_marginBottom="@dimen/dimen_12_dp"
    >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/dimen_44_dp"
        android:layout_height="@dimen/dimen_44_dp"
        android:background="@drawable/rectangle_bg"
        android:layout_alignParentStart="true"
        android:src="@drawable/play_icon_test"
        android:layout_centerVertical="true"
        android:padding="@dimen/dimen_8_dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/icon"
        android:layout_marginStart="16dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/tvActionBtn"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tvRewardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Watch online video for 15 minutes"
            android:textColor="#717171"
            android:textSize="14dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/ivRewardIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_star"
                />

            <TextView
                android:id="@+id/tvRewardCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="+50"
                android:textSize="12dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#FFA700"
                />


        </LinearLayout>



    </LinearLayout>


    <TextView
        android:id="@+id/tvActionBtn"
        android:layout_width="wrap_content"
        android:paddingHorizontal="@dimen/dimen_20_dp"
        android:layout_height="@dimen/dimen_26_dp"
        android:text="GO"
        android:textSize="14dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/rectangle_bg"

        />

    <TextView
        android:id="@+id/tvClaimBtn"
        android:layout_width="60dp"
        android:layout_height="26dp"
        android:text="Claim"
        android:textSize="14dp"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="@color/white"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/rectangle_bg"

        />




</RelativeLayout>