<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:ignore="MissingDefaultResource">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_36_dp"
        android:background="@drawable/shape_rounded_corner_white_radius"
        android:paddingHorizontal="@dimen/dimen_10_dp"
        android:paddingVertical="@dimen/dimen_16_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="@dimen/dimen_138_dp"
            android:layout_height="@dimen/dimen_138_dp"
            android:layout_marginTop="@dimen/dimen_8_dp"
            android:src="@drawable/ic_confirm_to_unlock"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />


        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/confirm_to_unlock"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/dimen_12_dp"
            android:textSize="@dimen/dimen_20_dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivIcon" />


        <TextView
            android:id="@+id/tvMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dimen_8_dp"
            android:text="@string/unlock_theme_confirmation"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_16_dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDescription" />


        <LinearLayout
            android:id="@+id/btnLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_32_dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dimen_16_dp"
            android:paddingVertical="@dimen/dimen_12_dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvMsg">


            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rounded_corner_white"
                android:paddingHorizontal="@dimen/dimen_40_dp"
                android:layout_marginHorizontal="@dimen/dimen_20_dp"
                android:paddingVertical="@dimen/dimen_12_dp"
                android:text="@string/cancel_reward"
                android:gravity="center"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_16_dp" />

            <TextView
                android:id="@+id/tvApplyExchangeReward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_gradient_coin_count"
                android:paddingHorizontal="@dimen/dimen_40_dp"
                android:paddingVertical="@dimen/dimen_12_dp"
                android:gravity="center"
                android:layout_marginTop="@dimen/dimen_14_dp"
                android:layout_marginHorizontal="@dimen/dimen_20_dp"
                android:text="@string/confirm"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_16_dp" />

        </LinearLayout>

        <View
            android:id="@+id/spaceView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_16_dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>



