<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/dimen_20_dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/premium_card_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalGuidelineStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalGuidelineEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".96" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuidelineBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.850" />


    <ImageView
        android:id="@+id/ivPremiumIcon"
        android:layout_width="@dimen/dimen_40_dp"
        android:layout_height="@dimen/dimen_40_dp"
        android:src="@drawable/premium_crown"
        app:layout_constraintStart_toEndOf="@+id/verticalGuidelineStart"
        app:layout_constraintTop_toBottomOf="@+id/horizontalGuidelineTop" />

    <TextView
        android:id="@+id/tvPremiumLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_4_dp"
        android:ellipsize="end"
        android:paddingHorizontal="@dimen/dimen_6_dp"
        android:text="@string/premium"
        android:textColor="#D1B254"
        android:textSize="@dimen/dimen_22_dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ivPremiumIcon"
        app:layout_constraintStart_toEndOf="@+id/ivPremiumIcon"
        app:layout_constraintTop_toTopOf="@+id/ivPremiumIcon" />


    <TextView
        android:id="@+id/tvMsg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingHorizontal="@dimen/dimen_4_dp"
        android:text="@string/unlock_all_premium_options_for_5_days"
        android:textColor="#D1B254"
        android:textSize="@dimen/dimen_12_dp"
        app:layout_constraintEnd_toEndOf="@+id/verticalGuidelineEnd"
        app:layout_constraintStart_toEndOf="@+id/verticalGuidelineStart"
        app:layout_constraintTop_toBottomOf="@+id/ivPremiumIcon" />


    <LinearLayout
        android:id="@+id/llExchangePremiumReward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_8_dp"
        android:background="@drawable/shape_gradient_btn_premium_card"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dimen_16_dp"
        android:paddingVertical="@dimen/dimen_6_dp"
        app:layout_constraintBottom_toTopOf="@+id/horizontalGuidelineBottom"
        app:layout_constraintStart_toEndOf="@+id/verticalGuidelineStart">

        <ImageView
            android:id="@+id/ivCoinIcon"
            android:layout_width="@dimen/dimen_24_dp"
            android:layout_height="@dimen/dimen_24_dp"
            android:layout_marginLeft="@dimen/dimen_4_dp"
            android:padding="@dimen/dimen_2_dp"
            android:scaleType="centerCrop"
            android:src="@drawable/coin" />

        <TextView
            android:id="@+id/tvCoinCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginLeft="@dimen/dimen_4_dp"
            android:elevation="@dimen/dimen_8_dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Exchange"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_16_dp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>