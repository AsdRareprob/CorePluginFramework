<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.rareprob.core_pulgin" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="31" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Required only if your app needs to access in app products (IAP) -->
    <uses-permission android:name="com.android.vending.BILLING" />

    <!-- <application android:name=".core.base.BaseApplication"> -->
    <application>

        <!-- Core Plugin components registration begins -->


        <!-- In app Billing components registration begins -->
        <activity
            android:name="com.rareprob.core_pulgin.payment.in_app_purchase.presentation.IapBillingActivity"
            android:label="IAP_Purchase"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppFramework.Xml.Based" />
        <activity
            android:name="com.rareprob.core_pulgin.payment.in_app_purchase.presentation.IapBillingPurchaseRestoreActivity"
            android:label="IAP_Restore"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppFramework.Xml.Based" />

        <!-- Notification components registration begins -->
        <service
            android:name="com.rareprob.core_pulgin.core.notification.FcmPushNotificationService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
            <!-- <intent-filter> -->
            <!--  -->
            <!-- <action android:name="com.google.firebase.INSTANCE_ID_EVENT" /> -->
            <!-- </intent-filter> -->
        </service>
    </application>

</manifest>